{
  "manifest_version": 3,
  "name": "Color Snap",
  "version": "1.0",
  "description": "Advanced color picker with RGB/HSL/HEX support, manage your history, and favorites.",
  "permissions": ["clipboardWrite", "storage"],
  "action": { 
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
